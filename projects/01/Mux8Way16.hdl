/**
 * 8-way 16-bit multiplexor:
 * out = a if sel == 000
 *       b if sel == 001
 *       etc.
 *       h if sel == 111
 */

CHIP Mux8Way16 {
    IN a[16], b[16], c[16], d[16],
       e[16], f[16], g[16], h[16],
       sel[3];
    OUT out[16];

    PARTS:
    //We are given 8 16 bit buses and must choose which one out of the 4 given.
    //and based on the selectors, we will be outputting A, B, C, D, E, F, G, or H
    //it's essentially a even bigger giant Mux Gate
    Mux4Way16(a=a, b=b, c=c, d=d, sel=sel[0..1], out=Mux4Way16Output1);
    Mux4Way16(a=e, b=f, c=g, d=h, sel=sel[0..1], out=Mux4Way16Output2);
    Mux16(a=Mux4Way16Output1, b=Mux4Way16Output2, sel=sel[2], out=out);

}